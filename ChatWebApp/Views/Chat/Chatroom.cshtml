@model Chat

@{
    if (Model != null)
    {
        ViewData["Title"] = "Chatroom " + Model.Name;
    }
}
<h1>Welcome to @ViewData["Title"]</h1>


<div class="card overflow-auto" style="height: 700px">
    <div class="card-body" id="chatbody">
        
    </div>
</div>


<div class="mt-4 mb-5">
    <div class="form-group">
        <input class="form-control" type="text" name="" id="messageInput">
    </div>
    <div>
        <input type="button" class="btn btn-primary float-end mt-2" value="Send" id="sendButton">
    </div>
</div>




<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
